<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="6">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:text="@string/str_startDiscussion"
            android:id="@+id/btnStartDiscussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvSelectedCount"
            android:layout_alignBottom="@+id/btnStartDiscussion"
            android:layout_alignTop="@+id/btnStartDiscussion" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <com.esgi.al1.nearbymsg.ui_widgets.DeviceListView
            android:id="@+id/lstV_AvailableDevices"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.esgi.al1.nearbymsg.ui_widgets.DeviceListView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/strPrevious"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPrevious"
            android:gravity="center"
            android:layout_centerVertical="true"
            />

        <Button
            android:text="@string/strRefesh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRefresh"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:text="@string/strNext"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnNext"
            android:gravity="center"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</LinearLayout>